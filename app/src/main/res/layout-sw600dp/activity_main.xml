    android:layout_height="match_parent"
    tools:context="vogella.com.movieapp.MainActivity"
    android:orientation="horizontal"
    >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight=".4"
        android:layout_height="match_parent"
        android:id="@+id/pane1"
